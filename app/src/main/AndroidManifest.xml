<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jovan.pocketsoccerapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/coat_of_arms"
        android:label="@string/app_name"
        android:roundIcon="@drawable/coat_of_arms"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShowStatisticsActivity" />
        <activity android:name=".SetParametersActivity" />
        <activity android:name=".NewGameActivity" />
        <activity android:name=".DetailViewActivity" />
        <activity android:name=".PlayGameActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>